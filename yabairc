# bsp, stack or float
yabai -m config layout bsp

yabai -m config window_placement second_child

# padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# mouse settings
yabai -m config mouse_follows_focus off
yabai -m config mouse_modifier alt

# left click + drag
yabai -m config mouse_action1 move
# right click + drag
yabai -m config mouse_action2 resize
# drag + swap
yabai -m mouse_drop_action swap

# Disable specific app
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^QQ" manage=off
yabai -m rule --add app="^Beyond" manage=off
yabai -m rule --add app="^WeChat" manage=off
yabai -m rule --add app="^GTA" manage=off
yabai -m rule --add app="^一亿小目标" manage=off
yabai -m rule --add app="^Sleeping Dogs™ Definitive Edition" manage=off
yabai -m rule --add app="^Terminal" manage=off
yabai -m rule --add app="^Shadow of the Tomb Raider" manage=off

