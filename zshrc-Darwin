alias lo='ls -la |lolcat -a -d 3'
alias b='bcomp'

alias po='pomodoro 60 10 --alarm=False'
alias zip='zip -x "*/\.*" -x "\.*"'
alias p='pomodoro 25 5  --notif=True'
